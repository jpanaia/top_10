<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(@song) do |f| %>
      <% if @song.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

          <ul>
          <% @song.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, class: "sr-only" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
      <div class="form-group">
        <%= f.label :album, class: "sr-only" %>
        <%= f.text_field :album, class: "form-control", placeholder: "Album" %>
      </div>
      <div class="form-group">
        <%= f.label :rank, class: "sr-only" %>
        <%= f.number_field :rank, class: "form-control", placeholder: "Rank" %>
      </div>
      <div class="form-group">
        <%#= f.label :artist_id %>
        <%#= f.number_field :artist_id %>
         <%= f.select(:artist_id, @artists.collect {|a| [ a.name, a.id ] }, {:include_blank => 'Please select an artist'}, class: "form-control") %>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-primary btn-long" %>
      </div>
    <% end %>
  </div>
</div>
