<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(@artist) do |f| %>
      <% if @artist.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

          <ul>
          <% @artist.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, class: "sr-only" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
      <div class="form-group">
        <%= f.label :genre, class: "sr-only" %>
        <%= f.text_field :genre, class: "form-control", placeholder: "Genre" %>
      </div>
      <div class="form-group">
        <%= f.label :hometown, class: "sr-only" %>
        <%= f.text_field :hometown, class: "form-control", placeholder: "Hometown" %>
      </div>
      <div class="checkbox">
        <label>
          <%= f.check_box :seen_live %> Seen Live?
        </label>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>